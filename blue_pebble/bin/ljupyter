#!/bin/env bash

POSITIONAL=()
while [[ $# -gt 0 ]]; do
  key="$1"
  case $key in
    --port)
      port="$2"
      shift # past argument
      shift # past value
      ;;
    *) # other options assumed to be for lscript
      POSITIONAL+=("$1") # save it in an array for later
      shift # past argument
      ;;
  esac
done

echo ${POSITIONAL}

lsub ${POSITIONAL} -- bp_tunnelled_jupyter ${port}
